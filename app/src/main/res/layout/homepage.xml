<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/toolbar"
        android:background="@color/my_primary"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:clickable="true"
            android:layout_marginVertical="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder2"
            android:visibility="visible"
            android:layout_marginLeft="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CustomCircularShape"  />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/header"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="22dp"
            tools:text="Hi, Unknown User"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>
        <ImageView
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/options"
            app:tint="@color/white"
            android:clickable="true"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        android:orientation="vertical"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to HackVerse"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#036261"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginVertical="6dp"
                android:layout_marginHorizontal="20dp"
                android:text="Featured Hackathons"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:paddingBottom="6dp"
                android:paddingHorizontal="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#036261"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:text="Recently Viewed"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:paddingBottom="6dp"
                android:paddingHorizontal="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#036261"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:layout_marginVertical="6dp"
                android:text="Upcoming Events"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/updates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:paddingBottom="6dp"
                android:paddingHorizontal="10dp"/>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg"
            android:visibility="gone"
            android:background="#98000000" />
        <LinearLayout
            android:id="@+id/custom_drawer"
            android:layout_width="242dp"
            android:layout_height="152dp"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:translationX="-242dp"
            android:elevation="8dp">
            <include layout="@layout/nav_header_homepage" />
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:elevation="0dp"
        android:layout_gravity="bottom">
        <View
            android:id="@+id/colorSlider"
            android:layout_width="78dp"
            android:layout_height="6dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:background="@drawable/slider_animation"
            android:elevation="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingTop="12dp"
            android:paddingBottom="5dp"
            android:background="@color/white"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/homeicon"
                    android:src="@drawable/home"
                    app:tint="#036261" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:id="@+id/hometext"
                    android:textSize="10sp"
                    android:textColor="#036261" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/searchicon"
                    android:src="@drawable/ic_menu_search"
                    app:tint="#2E2E2E" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchtext"
                    android:text="Search"
                    android:textSize="10sp"
                    android:textColor="#2E2E2E" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/nav_add_dummy"
                android:layout_width="54dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="-24dp"
                android:visibility="invisible"
                android:background="@drawable/center_button_background"
                android:elevation="1dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_dialog_add"
                    android:layout_gravity="center"
                    app:tint="@color/white" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/nav_myhackathons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/myhackathonsicon"
                    android:src="@drawable/myhackathons"
                    app:tint="#2E2E2E" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Hackathons"
                    android:id="@+id/myhackathonstext"
                    android:textSize="10sp"
                    android:textColor="#2E2E2E" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_calendar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/calendaricon"
                    android:src="@drawable/calendar"
                    app:tint="#2E2E2E" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/calendartext"
                    android:text="Calendar"
                    android:textSize="10sp"
                    android:textColor="#2E2E2E" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/nav_add"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom_nav"
        android:layout_marginTop="-24dp"
        android:background="@drawable/ripple_effect"
        android:elevation="1dp">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/color_slider_animation"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_dialog_add"
            android:layout_gravity="center"
            app:tint="@color/white" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
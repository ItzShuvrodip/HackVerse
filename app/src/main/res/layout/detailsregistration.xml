<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsRegistration">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/toolbar"
        android:background="@color/my_primary"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            app:tint="@color/white"
            android:clickable="true"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/header"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:text="Registration Details"
            android:textAlignment="center"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/edit"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/edit"
            app:tint="@color/white"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginRight="12dp"
            app:layout_constraintEnd_toStartOf="@id/delete"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_menu_delete"
            app:tint="@color/white"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="HackathonName"
            android:id="@+id/hackathon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Name :"
        android:id="@+id/teamnameid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hackathon"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/section1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="6dp"
        app:layout_constraintTop_toBottomOf="@id/teamnameid">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/my_primary"
            app:boxStrokeWidth="2dp"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:id="@+id/teamnameediterror"
            app:boxCornerRadiusTopStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            android:visibility="gone"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusBottomEnd="4dp"
            app:hintTextColor="#5B5B5B"
            android:textStyle="bold">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:id="@+id/teamnameedit"
                android:hint="Team Name"
                android:textColor="#1A1919"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Team Name"
            android:id="@+id/teamname"
            android:visibility="visible"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#036261"
        android:id="@+id/bar1"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/section1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/bar1"
        android:id="@+id/section2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section2A"
        android:visibility="visible"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="18dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite Link"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Link"
                android:drawableStart="@drawable/reset"
                android:drawableTint="#640101"
                android:textColor="#640101"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:drawablePadding="6dp"
                android:clickable="true"
                android:textAlignment="center"
                android:gravity="center"
                android:visibility="gone"
                android:backgroundTint="#FFBBBB"
                android:background="@drawable/rounded_corners"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:id="@+id/ResetLink"
                android:textSize="16dp"
                android:textStyle="bold" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/coupon_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scrollbarSize="0dp"
                android:layout_marginEnd="70dp"
                android:fillViewport="true">
                <TextView
                    android:id="@+id/link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="https://www.invite-link.comkkkkkkkkkkkkkkkkkkkk"
                    android:maxLines="1"
                    android:textSize="16dp"
                    android:textColor="#036261"
                    android:fontFamily="sans-serif-medium" />
            </HorizontalScrollView>

                <ImageView
                    android:id="@+id/copy"
                    android:layout_width="34dp"
                    android:layout_height="24dp"
                    android:src="@drawable/copy"
                    android:layout_toStartOf="@id/share"
                    app:tint="#349D9B"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#DAF1F5"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"/>
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="34dp"
                    android:layout_height="24dp"
                    android:src="@drawable/share"
                    app:tint="#349D9B"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="#DAF1F5"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section2B"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have been Invited by"
                android:textStyle="bold"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leaderinvite"
                tools:text="Leader Name"
                android:textStyle="bold"
                android:textColor="#036261"
                android:textSize="20dp"/>
        </LinearLayout>
</LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#036261"
        android:id="@+id/bar2"
        app:layout_constraintTop_toBottomOf="@id/section2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/section3"
        android:text="Team Leader"
        app:layout_constraintTop_toBottomOf="@id/bar2"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/section3"
        android:id="@+id/leader"
        android:elevation="20dp"
        android:layout_marginVertical="6dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp"
        android:paddingHorizontal="18dp"
        android:gravity="center_vertical|start"
        android:layout_gravity="center_vertical">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/leaderimage"
            android:src="@drawable/defaultdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_marginRight="6dp"
            app:shapeAppearanceOverlay="@style/CustomCircularShape" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Leader Name"
            android:layout_toEndOf="@id/leaderimage"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:id="@+id/leadername"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/leaderimage"
            android:layout_marginHorizontal="8dp"
            android:layout_below="@id/leadername"
            tools:text="emailid@gmail.com"
            android:layout_marginVertical="2dp"
            android:id="@+id/leaderemail"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/email"
            android:id="@+id/emaillead"
            android:clickable="true"
            android:visibility="visible"
            android:background="@drawable/rounded_corners"
            android:padding="6dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:backgroundTint="#0066CC"
            app:tint="#FFFFFF" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/section4"
        android:text="Team Members"
        app:layout_constraintTop_toBottomOf="@id/leader"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/members"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/section4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.recyclerview.widget.RecyclerView>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="                    Register                    "
        android:visibility="visible"
        android:textStyle="bold"
        android:textColor="#036261"
        android:layout_marginVertical="20dp"
        app:backgroundTint="#BAF0EF"
        android:textSize="18dp" />

</androidx.constraintlayout.widget.ConstraintLayout>